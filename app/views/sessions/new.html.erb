<%= form_for(:session, url: sessions_path, html: { class: "form-signin margin-top-50" }) do |f| %>

	<h2 class="form-signin-heading">Sign in</h2>

	<%= f.email_field :email, { class: "form-control", placeholder: "Email", autofocus: true } %>
	<%= f.password_field :password, { class: "form-control", placeholder: "Password" } %>

	<%= f.submit "Sign in", { class: "btn btn-lg btn-primary btn-block" } %>
	<%= link_to "Sign up", new_user_path, { class: "btn btn-lg btn-default btn-block" } %>

<% end %>