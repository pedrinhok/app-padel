<%= form_for(@user, html: { class: "form-signup margin-top-50 well" }) do |f| %>

	<legend>Edit user</legend>

	<div class="form-group <%= has_error(:name) %>">
		<%= f.text_field :name, { class: "form-control", placeholder: "Name", autofocus: true } %>
	</div>
	<div class="form-group <%= has_error(:email) %>">
		<%= f.email_field :email, { class: "form-control", placeholder: "Email" } %>
	</div>
	<div class="form-group <%= has_error(:password) %>">
		<%= f.password_field :password, { class: "form-control", placeholder: "Password" } %>
	</div>
	<div class="form-group <%= has_error(:password_confirmation) %>">
		<%= f.password_field :password_confirmation, { class: "form-control", placeholder: "Password Confirmation" } %>
	</div>

	<%= f.submit "Save", { class: "btn btn-lg btn-primary btn-block" } %>

<% end %>