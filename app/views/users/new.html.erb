<%= form_for(@user, html: { class: "form-signup margin-top-50" }) do |f| %>

	<h2 class="form-signup-heading">Sign up</h2>

	<%= f.text_field :name, { class: "form-control", placeholder: "Name", autofocus: true } %>
	<%= f.email_field :email, { class: "form-control", placeholder: "Email" } %>
	<%= f.password_field :password, { class: "form-control", placeholder: "Password" } %>
	<%= f.password_field :password_confirmation, { class: "form-control", placeholder: "Password Confirmation" } %>

	<%= f.submit "Sign up", { class: "btn btn-lg btn-primary btn-block" } %>
	<%= link_to "Sign in", sign_in_path, { class: "btn btn-lg btn-default btn-block" } %>

<% end %>